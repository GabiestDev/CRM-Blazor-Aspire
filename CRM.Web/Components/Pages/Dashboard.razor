@page "/"

<PageTitle>Dashboard</PageTitle>
<div class="header d-flex justify-content-between">
    <div class="header-title">
        <h1>Dashboard</h1>
        <p>Welcome to your dashboard</p>
    </div>
    <div class="d-flex justify-content-between mb-4 gap">
        <div class="view-header-button">
            <button class="btn btn-primary btn-leads">View All Leads</button>
        </div>
        <div class="add-header-button">
            <button class="btn btn-secondary">Add New Leads</button>
        </div>
    </div>
</div>
<div class="body">
    <div class="card-group">
        <div class="card card-total">
            <p class="card-title">Total Leads</p>
            <p class="card-text">150</p>
            <i class="icon-leads"></i>
            <p class="percent-delta-diff">+30% vs last month</p>
        </div>
        <div class="card card-contacted">
            <p class="card-title">Contacted Leads</p>
            <p class="card-text">90</p>
            <i class="icon-leads"></i>
            <p class="percent-delta-diff">+8% vs last month</p>
        </div>
        <div class="card card-converted">
            <p class="card-title">Converted Leads</p>
            <p class="card-text">29</p>
            <i class="icon-leads"></i>
            <p class="percent-delta-diff">+15% vs last month</p>
        </div>
        <div class="card card-not-interested">
            <p class="card-title">Total Leads</p>
            <p class="card-text">15</p>
            <i class="icon-leads"></i>
            <p class="percent-delta-diff">-3% vs last month</p>
        </div>
    </div>
    <div class="leads-charts">
        <div class="leads-trends">
            <p class="leads-title">Leads Trends</p>
            <p>Weekly lead acquisition over the last 5 weeks</p>
            <div class="chart-placeholder">[Chart Placeholder]</div>
        </div>
        <div class="leads-sources">
            <p class="leads-title">Leads Sources</p>
            <p>Distribuition of leads by acquisition channel</p>
            <div class="chart-placeholder">[Chart Placeholder]</div>
            <div class="chart-results">
                <p>Facebook:45</p>
                <p>Google:30</p>
                <p>Website:25</p>
                <p>Event:15</p>
                <p>Others:10</p>
            </div>
        </div>
    </div>
    <div class="sales-stats">
        <div class="sales-report-leaderboard">
            <i class="title-icon"></i>
            <p class="title-text">Sales Rep Leaderboard</p>
            <p>Top performers this month</p>
            <div class="leader-report">
                <p>1. Alice - 15 conversions</p>
                <p>2. Bob - 12 conversions</p>
                <p>3. Charlie - 10 conversions</p>
                <p>4. David - 8 conversions</p>
                <p>5. Eve - 5 conversions</p>
            </div>
        </div>

        <div class="quick-stats">
            <p class="title-text">Quick Stats</p>
            <p>Key metrics at a glance</p>
            <div class="stats-list">
                <i class="icon-stats"></i>
                <p>Converstion Rate 27%</p>
                <i class="icon-stats"></i>
                <p>Avg. Response Time 2.3H</p>
                <i class="icon-stats"></i>
                <p>Follow-ups Sent 156</p>
            </div>
        </div>
    </div>
    <div class="recent-activity">
        <p class="title-text">Recent Activity</p>
        <p>Latest actions on leads</p>
        <div class="activity-list">
            <p>John contacted lead #123 via email.</p>
            <p>Mary converted lead #124 to customer.</p>
            <p>Bob scheduled a follow-up with lead #125.</p>
            <p>Alice updated lead #126 status to 'Contacted'.</p>
            <p>David added a note to lead #127.</p>
        </div>
    </div>
</div>
